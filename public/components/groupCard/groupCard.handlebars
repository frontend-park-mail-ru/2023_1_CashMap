<div class="profileCard">
    {{#if avg_color1}}
        <div class="groupCard__header" style="background: linear-gradient(30deg, {{avg_color1}}, {{avg_color2}});"></div>
    {{else}}
        <div class="groupCard__header" style="background-image: url( static/img/profile_background.svg )">
            {{!-- <button class="profileCard__button">
                <div class="profileCard__button-text">
                    Изменить обложку
                </div>
            </button> --}}
        </div>
    {{/if}}
    <div class="groupCard__body">
        <div class="profileCard__inf">
            <div class="groupCard__info-img-wrapper background-color-post "></div>
            <img src="{{ avatar_url }}" class="groupCard__info-img avatar-form">
        </div>
        <div class="profileCard__info-data">
            <div class="profileCard__info-text profileCard__info-text_header">{{ title }}</div>
            {{#if isSub}}
                <div class="profiteCard__info-check">
                    <img src="static/img/ok.svg" class="profileCard__info_img avatar-form">
                    <div class="profileCard__info-text groupCard__info-text__little font-InterMedium ">Вы подписаны</div>
                </div>
            {{else}}
                <div class="profileCard__info-text font-InterMedium ">{{ subscribers }} {{num-subs subscribers}}</div>
            {{/if}}
        </div>
        <div class="groupCard__option">
            {{#if isAdmin}}
                <button class="profileCard__button profileCard__button_grey"data-id="{{ group_link }}" id="js-group-settings-btn">
                    <div class="profileCard__button-text"> Управление </div>
                    <img class="profileCard__edit-icon" src="../../static/img/settings.svg">
                </button>
                <!--<button class="profileCard__button profileCard__button_grey"data-id="{{ group_link }}" id="js-group-settings-btn">
                    <div class="profileCard__button-text"> Заявки </div>
                </button>-->
            {{else}}
                {{#if isSub}}
                    <button class="profileCard__button profileCard__button_grey" id="js-group-unsub-btn" data-id="{{ group_link }}">
                        <div class="profileCard__button-text"> Отписаться </div>
                        <img class="profileCard__edit-icon" src="../../static/img/exit.svg">
                    </button>
                {{else}}
                    <button class="groupCard__button" id="js-group-sub-btn" data-id="{{ group_link }}">
                        <div class="profileCard__button-text"> Подписаться </div>
                      <img class="profileCard__edit-icon" src="../../static/img/join_group_white.svg">
                    </button>
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>