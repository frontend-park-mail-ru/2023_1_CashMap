<div class="post background-color-post border-radius post-padding">
    <div class="post-profile">
        <img class="post-profile__avatar" src="{{ owner_info.url }}">
        <span class="post-profile__name font-MailSansRoman font-size-16 font-color-post-sender hidden-and-add-dots"> {{ owner_info.first_name }} {{ owner_info.last_name }} </span>
        <span class="post-profile__date font-InterMedium font-size-12 font-color-gray-text"> {{ creation_date }} </span>
        {{#if isMyPost}}
            <img class="post-profile__dots margin-auto" src="static/img/post_icons/post_menu.svg">
        {{/if}}

        <div class="post-menu post-menu-size post-menu-position background-color-profile-menu border-radius-btn-input box-shadow-profile-menu">
            <div class="post-menu-item-delete hover-block border-radius-btn-input margin-auto" data-id="{{ id }}">
                <span class="menu-item__text font-size-15 font-MailSansRoman margin-auto"> Удалить запись </span>
            </div>
            <div class="post-menu-item-edit hover-block border-radius-btn-input margin-auto" data-id="{{ id }}">
                <span class="menu-item__text font-size-15 font-MailSansRoman margin-auto"> Редактировать </span>
            </div>
        </div>
    </div>

    <div class="post-text font-MailSansRoman font-size-16 font-color-text"> {{ text_content }} </div>
    <div class="post-media"></div>
    <div class="post-buttons">
        <div class="post-buttons-like">
            <img class="post-buttons__icon" src="static/img/post_icons/like.svg">
            <span class="like__count font-InterMedium font-size-15 font-color-gray-icon"> {{ likes_amount }} </span>
        </div>
        <div class="post-buttons-comment">
            <img class="post-buttons__icon" src="static/img/post_icons/comment.svg">
            <span class="comment__count font-InterMedium font-size-15 font-color-gray-icon"> {{ comments_count }} </span>
        </div>
        <div class="post-buttons-bookmark">
            <img class="post-buttons__icon" src="static/img/post_icons/bookmark.svg">
        </div>
    </div>

    {{> commentArea this }}
</div>
