<div class="smiles-keyboard background-color-post font-color-gray-icon box-shadow-create-post font-InterRegular font-size-13" id="js-smiles-keyboard">
    <div class="smiles">
        <div class="block-name">Эмоции</div>
        <div class="smiles-block">
            {{#each smiles.smiles as |smile|}}
                <div class="smiles-block__smile js-smile">{{smile.text}}</div>
            {{/each}}
        </div>
    </div>
    {{> stickers stickerpacks}}
    <div class="smiles-keyboard__options">
        <div class="smiles-keyboard-icon smiles-keyboard-icon_smiles">
            <input class="keyboard_img" id="js-smiles" type="image" src="static/img/post_icons/smile.svg">
            <input class="keyboard_img" id="js-smiles-active" type="image" src="static/img/post_icons/smile_active.svg">
        </div>
        {{#if stickerpacks}}
            <div class="smiles-keyboard-icon smiles-keyboard-icon_stickers">
                <input class="keyboard_img" id="js-stickers" type="image" src="static/img/comment_icons/stickers.svg">
                <input class="keyboard_img" id="js-stickers-active" type="image" src="static/img/comment_icons/stickers_active.svg">
            </div>
        {{/if}}
    </div>
</div>
