<div class="sign-in-path">
    <div class="sign-in-table">
        <span class="sign-in-table__title font-Comfortaa font-size-23 font-color-title"> {{ title }} </span>
        <div class="input-table">
            {{#each inputFields}}
                {{> inputField this}}
            {{/each}}

            {{> button buttonInfo}}

            <span class="input-table__error-info font-MailSansRoman font-size-19 font-color-error {{ errorInfo.errorClass }}" id="{{ errorInfo.jsId }}"> {{ errorInfo.errorText }} </span>

            <a class="input-table__link font-MailSansRoman font-size-16 font-color-info cursor-pointer" id="{{ link.jsId }}"> {{ link.text }} </a>

            <span class="input-table__link-info font-InterMedium font-size-15 font-color-reg-info"> {{ linkInfo }} </span>
        </div>
    </div>
</div>
