            <input class="cursor-pointer" type="image" src="static/img/post_icons/photo.svg">
            <input class="cursor-pointer" type="image" src="static/img/post_icons/photo_hover_msg.svg">
        </div>

        <div class="chat__footer-icon comment-icon_smiles">
            <input class="cursor-pointer" type="image" src="static/img/post_icons/smile.svg">
            <input class="cursor-pointer" type="image" src="static/img/post_icons/smile_hover_msg.svg">
        </div>
        {{> smiles keyboardData}} --}}

        <div class="chat__footer-icon create-comment__send-icon">
            <input class="cursor-pointer" type="image" src="static/img/post_icons/send.svg">
            <input class="cursor-pointer" type="image" src="static/img/post_icons/send_hover.svg">
        </div>
    </div>
</div>
