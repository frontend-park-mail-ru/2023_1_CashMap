<div class="message js-go-chat cursor-pointer" data-id="{{ chat_id }}">
    <div class="message__info">
        <img src="{{ avatar_url }}" class="message__friend-avatar avatar-form">
        <div class="message__block message__block_flex-start">
            <div class="message__text">{{ first_name }} {{ last_name }}</div>
            {{#if (eq last_msg.message_content_type 'sticker')}}
                <div class="message__text message__text_grey"> стикер </div>
            {{ else }}
                {{#if (eq last_msg.text_content '') }}
                    {{#if last_msg.creation_date}}
                        <div class="message__text message__text_grey"> вложение </div>
                    {{ else }}
                        <div class="message__text message__text_grey"> сообщений пока нет </div>
                    {{/if}}
                {{ else }}
                    <div class="message__text message__text_grey">{{ last_msg.text_content }}</div>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <div class="message__block">
        {{#if last_msg.creation_date }}
            <div class="message__date"> {{ last_msg.creation_date }} </div>
            {{#if read }}
                <div class="message__status"> </div>
            {{ else }}
                <div class="message__status message__status_muted"> </div>
            {{/if}}
        {{/if}}
    </div>
</div>
