            <textarea class="newGroup__textarea__field border-radius-btn-input font-InterMedium font-size-14 font-color-gray-text background-color-feed border-none" id="js-info-input">{{data}}</textarea>
            <div class="newGroup__textarea__error font-InterRegular font-size-12 font-color-error" id="js-info-error"></div>
        </div>

