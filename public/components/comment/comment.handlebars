<div class="comment">
    <img class="comment__avatar profile-img-size" src="{{ senderPhoto }}">
    <span class="comment__name font-InterMedium font-size-15 font-color-comment-sender hidden-and-add-dots"> {{ sender_name }} </span>
    <span class="comment__date font-InterMedium font-size-10 font-color-gray-text"> {{ date }} </span>
    <div class="comment-operations opacity-pic">
        <img class="comment-operations__update" src="static/img/comment_icons/edit.svg">
        <img class="comment-operations__delete" src="static/img/comment_icons/delete.svg">
    </div>
    <span class="comment__text font-InterMedium font-size-12 font-color-text"> {{ text }} </span>
    <div class="comment__media"></div>
</div>
