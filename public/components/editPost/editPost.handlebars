 <div class="edit-post background-color-menu border-radius box-shadow-create-post" id="{{ id }}">
    <div class="edit-post__body">
        <img src="{{ avatar_url }}" class="edit-post__body-img avatar-form profile-img-size">
        <textarea maxlength="1500" class="edit-post__body-text font-color-text font-size-16 font-MailSansRomanRegular" placeholder="Добавить запись" id="js-edit-post-textarea">{{ text }}</textarea>
    </div>
    <div class="edit-post__options">
        <div class="hover-pic margin-auto" style="grid-column: 6; cursor: pointer;">
            <img class="margin-auto" src="static/img/post_icons/photo.svg">
            <img class="margin-auto" src="static/img/post_icons/photo_hover.svg">
        </div>

        <div class="hover-pic margin-auto" style="grid-column: 8; cursor: pointer;">
            <img class="margin-auto" src="static/img/post_icons/smile.svg">
            <img class="margin-auto" src="static/img/post_icons/smile_hover.svg">
        </div>
        <div class="edit-post__options-button">
            {{> buttonDefault buttonData1 }}
        </div>
        <div class="edit-post__options-button">
            {{> buttonDefault buttonData }}
        </div>
    </div>
 </div>
