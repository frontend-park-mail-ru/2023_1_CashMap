<div class="profileCard">
    <div class="profileCard__header" style="background-image: url( static/img/profile_background.svg )">
        <button class="profileCard__button">
            <div class="profileCard__button-text">
                Изменить обложку
            </div>
        </button>
    </div>
    <div class="profileCard__body">
        <div class="profileCard__info">
            <div class="profileCard__inf">
                <div class="profileCard__info-img-wrapper background-color-post "></div>
                <img src="{{ avatar_url }}" class="profileCard__info-img avatar-form">
            </div>
            <div class="profileCard__info-data">
                <div class="profileCard__info-text profileCard__info-text_header">{{ firstName }} {{ lastName }}</div>
                <div class="profileCard__info-text font-InterMedium ">{{ status }}</div>
                <div class="profileCard__info-text font-InterRegular profileCard__info-text_little"> в сети: {{ lastActive }} </div>
            </div>
        </div>
        {{# if isMyPage}}
            <button class="profileCard__button profileCard__button_grey" id="js-profile-settings-btn" data-id="{{ user_link }}">
                <div class="profileCard__button-text"> Редактировать </div>
            </button>
        {{else}}
            {{# if isMyFriend}}
                <div class="post-buttons-like post-hover border-radius-btn-input cursor-pointer" data-id="{{ user_link }}" style="padding: 6px;" id="js-friend-remove">
                    <img class="add-friend__icon cursor-pointer margin-auto" src="static/img/deleteFriend.svg">
                    <img class="add-friend__icon cursor-pointer margin-auto" src="static/img/deleteFriendHover.svg">
                </div>
            {{else}}
                <div class="post-buttons-like post-hover border-radius-btn-input cursor-pointer" data-id="{{ user_link }}" style="padding: 6px;" id="js-friend-add">
                    <img class="add-friend__icon cursor-pointer margin-auto" src="static/img/addFriend.svg">
                    <img class="add-friend__icon cursor-pointer margin-auto" src="static/img/addFriendHover.svg">
                </div>
            {{/if}}
            <button class="profileCard__button profileCard__button_grey" id="js-go-msg" data-id="{{ user_link }}">
                <div class="profileCard__button-text" data-id="{{ user_link }}"> Написать сообщение </div>
            </button>
        {{/if}}
    </div>
</div>
